generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @db.Uuid @id
  name  String?
  token String?
}

model Country {
  id    String     @id @db.Uuid
  name  String? @unique
  expectedBudget Float  @default(0.00)
  expenses Expense[]
}

model Category {
  id    String     @id @db.Uuid
  name  String  @unique
  expenses Expense[]
}

model Expense {
  id    String         @id @db.Uuid
  countryId   String
  categoryId  String?

  country     Country   @relation(fields: [countryId], references: [id])
  category    Category? @relation(fields: [categoryId], references: [id])

  name String
  value Float   @default(0.00)
  date DateTime @default(now())
}

